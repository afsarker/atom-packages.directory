

<% @top_categories.each do |category| %>
  <a href="/category/<%= category.permalink %>"><%= category.name %></a>
  <ul>
    <% category.sub_categories.each do |category| %>
      <li><a href="/category/<%= category.permalink %>"><%= category.name %></a></li>
    <% end %>
  </ul>

  <%= partial :_package_list, locals: {packages: category.packages[0..8]} %>
<% end %>

<% @categories.select { |c| !c.parent_category && !@top_categories.include?(c) }.each do |category| %>
  <a href="/category/<%= category.permalink %>"><%= category.name %></a>
<% end %>
