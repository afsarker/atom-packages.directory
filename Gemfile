source 'https://rubygems.org'

# Framework
gem 'sinatra'
gem 'sinatra-partial'
gem 'sinatra-contrib', require: false
gem 'multi_json'

# Asset compilation
gem 'coffee-script'
gem 'sass', require: 'sass'
gem 'compass'
gem 'sprockets-sass'
gem 'sprockets-helpers'

# Database
gem 'mongoid'

# HTTP client
gem 'faraday'

# Markdown processor
gem 'kramdown'

# Server
gem 'puma'

gem 'rake'
gem 'foreman'

group :development, :test do
  # Application reloader
  gem 'shotgun'

  # Pry for rake console
  gem 'pry'

  # Rspec for testing
  gem 'rspec'
  gem 'factory_girl', require: false
  gem 'faker'
  gem 'rack-test'

  gem 'database_cleaner'
end
