source 'https://rubygems.org'

# Framework
gem 'sinatra'
gem 'sinatra-partial'

# Asset compilation
gem 'sinatra-asset-pipeline'
gem 'sass'
gem 'compass'

# Database
gem 'nobrainer'
gem 'rethinkdb', '2.1.0'

# HTTP client
gem 'faraday'

# Markdown processor
gem 'kramdown'

# Server
gem 'thin'

group :development do
  # Application reloader
  gem 'shotgun'
end
